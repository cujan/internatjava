<?xml version="1.0"?>

<!-- Generated 01/30/2012 21:57:56

Configuration for 'internatDB' database service

-->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">


    <bean 
        id="internatDB"
        class="com.internatdb.InternatDB"
        scope="singleton"
        lazy-init="true">
        <property name="dataServiceManager">
            <ref bean="internatDBDataService"/>
        </property>
        <property name="taskManager">
            <ref bean="internatDBTaskMgr"/>
        </property>
    </bean>


    <bean 
        class="com.wavemaker.runtime.data.spring.WMPropertyPlaceholderConfigurer">
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
        <property name="locations">
            <list>
                <value>classpath:internatDB.properties</value>
            </list>
        </property>
    </bean>

    <bean 
        id="internatDBDataSource"
        class="org.springframework.jdbc.datasource.DriverManagerDataSource" 
        lazy-init="true">
        <property name="driverClassName" value="${internatDB.driverClassName}"/>
        <property name="url" value="${internatDB.connectionUrl}"/>
        <property name="username" value="${internatDB.username}"/>
        <property name="password" value="${internatDB.password}"/>
    </bean>


    <bean 
        id="internatDBTxMgr" 
        class="org.springframework.orm.hibernate3.HibernateTransactionManager"
        lazy-init="true">
        <property name="sessionFactory">
            <ref bean="internatDBSessionFactory"/>
        </property>
    </bean>


    <bean 
        id="internatDBHibernateTemplate"
        class="org.springframework.orm.hibernate3.HibernateTemplate"
        lazy-init="true">
        <property name="sessionFactory"> 
            <ref bean="internatDBSessionFactory"/>
        </property>
    </bean>  


    <bean 
        id="internatDBSessionFactory" 
        class="com.wavemaker.runtime.data.spring.ConfigurationAndSessionFactoryBean"
        lazy-init="true">

        <!-- A unique name for this SessionFactory's configuration -->
        <property name="name" value="internatDB"/>
        <property name="dataSource" ref="internatDBDataSource"/>

        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">${internatDB.dialect}</prop>
                <prop key="hibernate.transaction.factory_class">
                    org.hibernate.transaction.JDBCTransactionFactory
                </prop>
                <prop key="hibernate.current_session_context_class">thread</prop>
            </props> 
        </property>

        <property name="mappingResources">
            <list>

<value>com/internatdb/data/Trieda.hbm.xml</value>
<value>com/internatdb/data/Student.hbm.xml</value>
<value>com/internatdb/data/Vychovavatel.hbm.xml</value>
<value>com/internatdb/data/Vychovnaskupina.hbm.xml</value>

<value>com/internatdb/data/Trieda.ql.xml</value>
<value>com/internatdb/data/app-queries.ql.xml</value>

            </list>
        </property>

    </bean>


    <!-- the data service bean instance is injected into the service bean -->
    <bean 
        id="internatDBDataService" 
        class="com.wavemaker.runtime.data.spring.SpringDataServiceManager"
        lazy-init="true">
        <constructor-arg>
            <!-- the value of the "name" property of the SessionFactory -->
            <value>internatDB</value>
        </constructor-arg>
        <constructor-arg>
            <ref bean="internatDBHibernateTemplate"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="internatDBTxMgr"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="internatDBTaskMgr"/>
        </constructor-arg>
        <constructor-arg>
            <map>
                <entry key="useIndividualCRUDOperations" value="false"/>
                <entry key="refreshEntities" value=""/> 
            </map>
        </constructor-arg>
    </bean>


    <bean 
        id="internatDBTaskMgr"
        class="com.wavemaker.runtime.data.DefaultTaskManager"
        lazy-init="true"/>

    <bean class="com.wavemaker.runtime.service.events.EventWire"
        lazy-init="false">
        <property name="serviceWire" ref="internatDBServiceWire"/>
        <property name="eventListener">
            <bean class="com.wavemaker.runtime.data.DataServiceEventListener"/>
        </property>
    </bean>

    <bean id="internatDBServiceWire"
        class="com.wavemaker.runtime.service.reflect.ReflectServiceWire"
        lazy-init="false" scope="singleton">
        <property name="serviceId" value="internatDB"/>
        <property name="serviceType" ref="DataService"/>
    </bean>

</beans>
